 {{> header}}
<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>domain</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
      <tr>
        <th scope="row">{{id}}</th>
        <td class="main-value">{{name}}</td>
        <td>
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
            <i class="fa fa-pencil edit-domain" aria-hidden="true"></i>
          </button>
          <button type="button" class="btn btn-primary btn-delete">
            <i class="fa fa-trash" aria-hidden="true"></i>
          </button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<form action="" method="post">
  <div class="form-group">
    <label for="POST-domain">Domain:</label>
    <input id="POST-domain" type="text" name="domain">
    <input type="submit" value="Save">
  </div>
</form>
<div class="addButton">
  <button type="button" class="btn btn-primary">Add Domain</button>
</div>
{{> footer}}
